{
  "manifest_version": 2,

  "name": "unPOFMA",
  "description": "Hide POFMA Correction Notices. Just because.",
  "version": "0.1",

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/content_script.js"],
          "run_at": "document_end"
      }
  ],

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "permissions": [
    "storage",
    "<all_urls>"
  ]
}